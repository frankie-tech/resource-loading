{
	"name": "resource-loader",
	"version": "0.0.8",
	"description": "You feed it configs, it build resources, bada bing bada boom!",
	"main": "dist/loader.js",
	"module": "dist/loader.modern.js",
	"source": "src/index.ts",
	"scripts": {
		"test": "uvu -r esm tests",
		"build": "microbundle -f modern,umd",
		"dev": "microbundle --name \"@rollup/plugin-node-resolve\" --extend watch --compress=false -f modern,umd --raw=true --no-sourcemap",
		"clean:dist": "rm -rf dist",
		"start": "npm-run-all clean:dist dev",
		"bundle": "npm-run-all clean:dist build"
	},
	"keywords": [
		"template",
		"microbundle",
		"typescript"
	],
	"author": {
		"name": "frankie",
		"url": "https://github.com/frankie-tech"
	},
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^9.0.0",
		"esm": "^3.2.25",
		"husky": "^4.2.5",
		"microbundle": "^0.12.3",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.3.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"uvu": "^0.3.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"mangle": {
		"regex": "^_"
	}
}
